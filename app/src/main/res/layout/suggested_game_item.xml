<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.ataei.ui.home.list.GameItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_game_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{item.name}"
            app:layout_constraintEnd_toEndOf="@+id/iv_game_icon"
            app:layout_constraintStart_toStartOf="@id/iv_game_icon"
            app:layout_constraintTop_toBottomOf="@id/iv_game_icon" />

        <TextView
            android:id="@+id/tv_game_producer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{item.producer}"
            app:layout_constraintEnd_toEndOf="@+id/iv_game_icon"
            app:layout_constraintStart_toStartOf="@id/iv_game_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_game_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>